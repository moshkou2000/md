<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="18dp"
    card_view:cardElevation="0dp"
    card_view:contentPadding="0dp">


    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/bgDialog"
        android:minWidth="160dp"
        android:orientation="vertical">

        <com.moshkou.md.controls.IconButtonControl
            android:id="@+id/btn_camera"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/ripple_effect"
            android:drawableStart="@drawable/ic_camera"
            android:drawableTint="@color/hyperlinkText"
            android:text="@string/placeholder_camera"
            android:textColor="@color/hyperlinkText"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="33dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerDialog"/>

        <com.moshkou.md.controls.IconButtonControl
            android:id="@+id/btn_gallery"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/ripple_effect"
            android:drawableStart="@drawable/ic_image"
            android:drawableTint="@color/hyperlinkText"
            android:text="@string/placeholder_gallery"
            android:textAlignment="textStart"
            android:textColor="@color/hyperlinkText"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="33dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>