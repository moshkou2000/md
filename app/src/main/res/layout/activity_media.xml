<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/appBar"
        layout="@layout/toolbar_map" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.moshkou.md.controls.SquareViewControl
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/shadow"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button_camera"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:drawableTop="@drawable/bg_camera"
                        android:background="@drawable/ripple_effect"
                        android:text="@string/placeholder_camera"
                        android:gravity="center_horizontal|top"/>

                    <Button
                        android:id="@+id/button_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@drawable/ripple_effect"
                        android:drawableTop="@drawable/bg_image"
                        android:text="@string/placeholder_gallery"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|top"/>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_brand"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="0dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/auto_complete_brand"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:hint="@string/placeholder_brand"
                android:background="@drawable/bg_placeholder_search"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="35dp" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/title_product"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/auto_complete_product"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:hint="@string/placeholder_product"
                android:background="@drawable/bg_placeholder_search"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="35dp" />

            <CheckBox
                android:id="@+id/checkbox_interesting"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/selector_checkbox"
                android:button="@null"
                android:checked="false"
                android:paddingStart="41dp"
                android:paddingEnd="16dp"
                android:text="@string/placeholder_interesting"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>