<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/search_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_tag_white"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/root">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/text_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/button_filter"
                android:background="@drawable/bg_placeholder_search"
                android:clickable="true"
                android:drawableStart="@drawable/ic_search"
                android:focusable="true"
                android:hint="@string/placeholder_search"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:singleLine="true"
                android:textColor="#333"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_filter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/spinner_more"
                android:background="@drawable/ic_notifications" />

            <Spinner
                android:id="@+id/spinner_more"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_more_vert" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:paddingStart="10dp"
        android:paddingTop="70dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.leanback.widget.HorizontalGridView
        android:id="@+id/grid_view_filter"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_box" />

    <Button
        android:id="@+id/button_filter_clear"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_clear"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#FFFFFF"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grid_view_filter" />

    <Button
        android:id="@+id/action_button_my_location"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_my_location"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        app:borderWidth="2dp"
        app:layout_constraintBottom_toTopOf="@id/action_button_add"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/action_button_add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="111dp"
        android:background="@drawable/bg_add"
        android:clickable="true"
        android:elevation="0dp"
        android:focusable="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/layout_gap"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <com.moshkou.md.controls.DraggingPanel
            android:id="@+id/layout_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:outlineProvider="bounds"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/layout_info_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_dragging_panel"
                android:orientation="vertical">

                <androidx.leanback.widget.HorizontalGridView
                    android:id="@+id/grid_view_info_images"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" />

                <TextView
                    android:id="@+id/text_view_info_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/text_view_info_advertiser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/text_view_info_last_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/grid_view_info_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_edit"/>
            </LinearLayout>
        </com.moshkou.md.controls.DraggingPanel>

        <com.moshkou.md.controls.DraggingPanel
            android:id="@+id/layout_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:outlineProvider="bounds"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/layout_details_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="48dp" />
            </FrameLayout>
        </com.moshkou.md.controls.DraggingPanel>

        <com.moshkou.md.controls.DraggingPanel
            android:id="@+id/layout_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:outlineProvider="bounds"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/layout_list_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/bottom_holder_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_dragging_panel"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <FrameLayout
                            android:layout_width="44dp"
                            android:layout_height="4dp"
                            android:layout_gravity="center_horizontal|top"
                            android:layout_marginTop="10dp"
                            android:background="#DFDFDF" />

                        <TextView
                            android:id="@+id/textView35"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="6dp"
                            android:text="@string/placeholder_bottom_holder"
                            android:textAlignment="center"
                            android:textColor="#707070"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </FrameLayout>
        </com.moshkou.md.controls.DraggingPanel>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>