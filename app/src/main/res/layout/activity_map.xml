<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--map-->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="48dp"/>

    <!--map buttons layout-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@+id/action_button_my_location"
            android:layout_alignParentTop="true"/>

        <Button
            android:id="@+id/action_button_my_location"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="top|end"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_my_location"
            android:translationZ="44dp"
            android:layout_above="@+id/action_button_add"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/action_button_add"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="top|end"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_add"
            android:translationZ="44dp"
            android:layout_above="@+id/layout_info_content_x"
            android:layout_alignParentEnd="true"/>

        <LinearLayout
            android:id="@+id/layout_info_content_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@drawable/bg_dragging_panel"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/text_map"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#FFF"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/hint_add_location"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:paddingBottom="60dp">

            <Button
                android:id="@+id/action_button_add_location"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="top|end"
                android:background="@drawable/ic_location"
                android:clickable="true"
                android:focusable="true"
                android:translationZ="44dp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <!--search layout-->
    <RelativeLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:paddingStart="10dp"
        android:paddingTop="100dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <!--search hint header-->
        <TextView
            android:id="@+id/text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/placeholder_search_hint_header"
            android:textSize="22sp" />

        <!--search hint body-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_1"
            android:layout_marginTop="4dp"
            android:text="@string/placeholder_search_hint_body"
            android:textSize="16sp" />

        <!--search data-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <!--search message nothing-->
        <TextView
            android:id="@+id/text_search_nothing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/text_1"
            android:layout_marginTop="4dp"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF"
            android:visibility="gone"
            android:text="@string/placeholder_search_hint_nothing"
            android:textSize="16sp" />
    </RelativeLayout>

    <!--info layout-->
    <include layout="@layout/fragment_bottom_sheet_info" />

    <!--list of billboards layout-->
    <include layout="@layout/fragment_bottom_sheet_billboards" />

    <!--search bar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--search bar-->
        <androidx.cardview.widget.CardView
            android:id="@+id/search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_tag_white"
            android:focusable="true"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:id="@+id/text_search_just_for_focus"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/text_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/button_filter"
                    android:background="@drawable/bg_placeholder_search"
                    android:clickable="true"
                    android:drawableStart="@drawable/bg_search"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="@string/placeholder_search"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:singleLine="true"
                    android:textColor="#333"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button_back"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_back"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/button_search_clear"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_remove"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/button_filter"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/spinner_more"
                    android:background="@drawable/ic_filter" />

                <Spinner
                    android:id="@+id/spinner_more"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_more_vert" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!--filter bar-->
        <androidx.leanback.widget.HorizontalGridView
            android:id="@+id/grid_view_filter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:visibility="visible"
            android:layout_below="@id/search_box"
            android:foregroundGravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

        <!--filter clear buttons-->
        <Button
            android:id="@+id/button_filter_clear"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@id/search_box"
            android:layout_alignParentEnd="true"
            android:layout_gravity="top|end"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_clear"
            android:translationZ="44dp"
            android:visibility="gone" />
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>