<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--map-->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--info layout-->
    <LinearLayout
        android:id="@+id/layout_draggable_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:minHeight="198dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/action_button_my_location"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="top|end"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_my_location"
            android:clickable="true"
            android:focusable="true"
            app:borderWidth="2dp" />

        <Button
            android:id="@+id/action_button_add"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="top|end"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_add"
            android:clickable="true"
            android:focusable="true"
            app:borderWidth="0dp" />

        <LinearLayout
            android:id="@+id/layout_info_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_dragging_panel"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager_info"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:clipToPadding="false"
                android:paddingStart="0dp"
                android:paddingEnd="36dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_view_info_billboard_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/layout_edit"
                        android:textColor="#000"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/text_view_info_last_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/layout_edit"
                        android:layout_below="@+id/text_view_info_billboard_name"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/layout_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true">

                        <Button
                            android:id="@+id/layout_info_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:background="@drawable/ic_billboard_digital"
                            android:text="@string/action_edit"
                            android:textColor="@android:color/white" />

                        <Button
                            android:id="@+id/layout_info_close"
                            android:layout_width="44dp"
                            android:layout_height="38dp"
                            android:background="@drawable/bg_close" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--details layout-->
    <include layout="@layout/fragment_bottom_sheet_details" android:visibility="visible" />

    <!--list of billboards layout-->
    <include layout="@layout/fragment_bottom_sheet_billboards" android:visibility="visible" />

    <!--search layout-->
    <RelativeLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:paddingStart="10dp"
        android:paddingTop="100dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <!--search hint header-->
        <TextView
            android:id="@+id/text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/placeholder_search_hint_header"
            android:textSize="22sp" />

        <!--search hint body-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_1"
            android:layout_marginTop="4dp"
            android:text="@string/placeholder_search_hint_body"
            android:textSize="16sp" />

        <!--search data-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <!--search message nothing-->
        <TextView
            android:id="@+id/text_search_nothing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/text_1"
            android:layout_marginTop="4dp"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF"
            android:visibility="gone"
            android:text="@string/placeholder_search_hint_nothing"
            android:textSize="16sp" />
    </RelativeLayout>

    <!--search bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--search bar-->
        <androidx.cardview.widget.CardView
            android:id="@+id/search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_tag_white"
            android:focusable="true"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:id="@+id/text_search_just_for_focus"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/text_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/button_filter"
                    android:background="@drawable/bg_placeholder_search"
                    android:clickable="true"
                    android:drawableStart="@drawable/bg_search"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="@string/placeholder_search"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:singleLine="true"
                    android:textColor="#333"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button_back"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_back"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/button_search_clear"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_remove"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/button_filter"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/spinner_more"
                    android:background="@drawable/ic_filter" />

                <Spinner
                    android:id="@+id/spinner_more"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_more_vert" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!--filter bar-->
        <androidx.leanback.widget.HorizontalGridView
            android:id="@+id/grid_view_filter"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:paddingTop="4dp"
            android:visibility="visible" />

        <!--filter clear buttons-->
        <Button
            android:id="@+id/button_filter_clear"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_clear"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:layout_gravity="end"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>